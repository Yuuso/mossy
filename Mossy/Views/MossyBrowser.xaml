<UserControl
	x:Class="Mossy.MossyBrowser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Mossy"
    mc:Ignorable="d" 
	d:DesignWidth="1600"
    d:DesignHeight="900">

	<Grid>
		<Popup IsOpen="{Binding NewProjectPopup}" StaysOpen="True" Placement="Center">
			<Grid Width="500" Height="300" Background="DimGray">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<TextBox
					Grid.Row="0"
					Margin="40,50"
					x:Name="PopupProjectName"/>
				<Button
					Grid.Row="1"
					Margin="100,40"
					FontSize="30"
					Content="ADD"
					Command="{Binding NewProjectCommand}"
					CommandParameter="{Binding Path=Text, ElementName=PopupProjectName}"/>
			</Grid>
		</Popup>
		<DockPanel>
			<Menu DockPanel.Dock="top">
				<MenuItem Header="_File">
					<MenuItem Header="_Add Project" Command="{Binding NewProjectPopupCommand}"/>
					<Separator/>
					<MenuItem Header="_Close Database" Command="{Binding CloseDatabaseCommand}"/>
				</MenuItem>
			</Menu>
			<Grid DockPanel.Dock="Top">
				<Button
					Content="ADD PROJECT"
					Width="400"
					Height="40"
					FontSize="22"
					Margin="5"
					Command="{Binding NewProjectPopupCommand}"/>
			</Grid>
			<ItemsControl DockPanel.Dock="Left" ItemsSource="{Binding Database.Projects}" Background="Gray" Width="600">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Border Background="DarkGoldenrod" Height="60">
							<TextBlock Text="{Binding Name}" FontSize="30" Foreground="Black"/>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</DockPanel>
	</Grid>
</UserControl>
